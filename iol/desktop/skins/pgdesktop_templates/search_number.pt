<label class="control-label" tal:content="title"/>
<div class="row-fluid">
    <div class="span4">
        <select class="bootstrap-search" tal:attributes="name string:${name}_op;id string:${name}_op" data-plugin="remove-on-cancel">
            <option value="eq">Uguale a</option>
            <option value="gt">Maggiore di</option>
            <option value="lt">Minore di</option>
            <option value="btw">Compreso tra</option>
        </select>
    </div>
    <div class="span4" tal:attributes="id string:${name}_span1">
        <input type="text" class="bootstrap-search" tal:attributes="name string:${name};id string:${name}_1"/>
    </div>
    <div class="span4 invisible" tal:attributes="id string:${name}_span2">
        <input type="text" class="bootstrap-search" tal:attributes="name string:${name};id string:${name}_2"/>
    </div>
    <input type="hidden" tal:attributes="name string:${name}_searchtype;id string:${name}_searchtype;value string:integer" />
</div>