        <metal:left metal:fill-slot="cruscotto_css">
            <span metal:use-macro="here/cruscotto_resources/macros/main_css"></span>
        </metal:left>
        <metal:js metal:fill-slot="cruscotto_js">
            <span metal:use-macro="here/cruscotto_resources/macros/main_js"></span>
        </metal:js>
        <metal:left metal:fill-slot="vertical_search">
            <span metal:use-macro="here/cruscotto_resources/macros/stati_wf_iol"></span>
